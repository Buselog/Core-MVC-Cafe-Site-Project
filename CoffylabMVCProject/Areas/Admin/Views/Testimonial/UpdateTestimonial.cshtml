@model CoffylabMVCProject.Entities.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
	<div class="page-header">
		<h3 class="page-title"> Update Testimonial Page </h3>
	</div>
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form method="post">
						<input type="hidden" asp-for="TestimonialId" class="form-control" />

						<label>Title</label>
						<br /><br />
						<input type="text" asp-for="TestimonialTitle" class="form-control" />
						<span asp-validation-for="TestimonialTitle" class="text-danger"></span>
						<br />
						<label>Description</label>
						<br /><br />
						<textarea  asp-for="Description" class="form-control" rows="3"></textarea>
						<span asp-validation-for="Description" class="text-danger"></span>
						<br />
						<label>Testimonial Rating</label>
						<br /><br />
						<input type="text" asp-for="TestimonialRating" class="form-control" />
						<span asp-validation-for="TestimonialRating" class="text-danger"></span>
						<br />
						<label>Image</label>
						<br /><br />
						<input type="text" asp-for="TestimonialImageUrl" class="form-control" />
						<span asp-validation-for="TestimonialImageUrl" class="text-danger"></span>
						<br />
						<button class="btn btn-gradient-info btn-sm" style="font-size: 12px">Save Changes</button>

					</form>
				</div>
			</div>

		</div>
	</div>
</div>

