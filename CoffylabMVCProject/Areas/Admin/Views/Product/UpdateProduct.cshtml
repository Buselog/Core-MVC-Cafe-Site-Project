@model CoffylabMVCProject.Entities.Product
@{
	ViewData["Title"] = "UpdateProduct";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
	<div class="page-header">
		<h3 class="page-title">Update Product</h3>
	</div>
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form method="post" enctype="multipart/form-data">

						<input type="hidden" asp-for="ProductId" />

						<label>Product Name</label>
						<br /><br />
						<input type="text" asp-for="ProductName" class="form-control" />
						<span asp-validation-for="ProductName" class="text-danger"></span>
						<br />
						<label>Product Description</label>
						<br /><br />
						<input type="text" asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
						<br />
						<label>Product Price</label>
						<br /><br />
						<input type="text" asp-for="ProductPrice" class="form-control" />
						<span asp-validation-for="ProductPrice" class="text-danger"></span>
						<br />
						<label>Product Image Url</label>
						<br /><br />
						<img src="@Model.ImageUrl" style="height:75px; width:75px" />
						<input type="file" asp-for="ImageFile" class="form-control" />
						<input type="hidden" asp-for="ImageUrl" class="form-control" />
						<span asp-validation-for="ImageFile" class="text-danger"></span>
						<br />
						<label>Product Category</label>
						<br /><br />
						<select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select">
							<option value="0">Select Category</option>
						</select>
						<span asp-validation-for="CategoryId" class="text-danger"></span>
						<br />
						<button class="btn btn-gradient-info btn-sm" style="font-size: 12px">Save Changes</button>
					</form>
				</div>
			</div>

		</div>
	</div>
</div>

@*  asp-for: modeldeki bir property'e bağlamayı sağlayan bir tag helper'dır. name="ProductName" yapar  *@
@*  form gönderildiğinde ASP.NET Core, Model Binding ile veriyi ProductName özelliğine bağlar. *@



