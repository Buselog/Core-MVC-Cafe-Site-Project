@model List<CoffylabMVCProject.Entities.SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
	<div class="page-header">
		<h6 class="page-title">Social Media Table </h6>
		<a href="/SocialMedia/AddNewSocialMedia" class="btn btn-gradient-success btn-sm">
			<i class="fa fa-plus fa-sm me-1"></i>Add New Social Media
		</a>
	</div>

	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">

					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>#</th>
								<th>Name</th>
								<th>Icon</th>
								<th>Link</th>
								<th>Operations</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td><b>@item.SocialMediaId</b></td>
									<td>@item.Name</td>
									<td align="center"><i class="fa-brands fa-@item.Icon fa-lg" style="color: #00008B"></i></td>
									<td>@item.Link</td>
									<td align="center">
										<a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-gradient-info btn-sm" style="font-size: 12px"><i class="fa fa-edit fa-sm me-1"></i>Update</a>
										&nbsp;
										<a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-gradient-danger btn-sm" style="font-size: 12px"> <i class="fa fa-trash fa-sm me-1"></i>Delete</a>
									</td>
								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
</div>

