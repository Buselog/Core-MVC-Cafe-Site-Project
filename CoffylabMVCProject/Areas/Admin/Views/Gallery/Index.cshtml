@model List<CoffylabMVCProject.Entities.Gallery>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content-wrapper">
	<div class="page-header">
		<h6 class="page-title">Gallery </h6>
		<a href="/Gallery/AddNewImage" class="btn btn-gradient-success btn-sm">
			<i class="fa fa-plus fa-sm me-1"></i> Add New Image
		</a>
	</div>
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">

					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Id</th>
								<th>Image</th>
								<th>Operations</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td><b>@item.GalleryId</b></td>
									<td align="center">
										<img src="@item.ImageUrl" style="height:61px; width:69px" />
									</td>
									<td align="center">
										<a href="/Gallery/UpdateImage/@item.GalleryId" class="btn btn-gradient-info btn-sm" style="font-size: 12px"><i class="fa fa-edit fa-sm me-1"></i>Update</a>
										&nbsp;
										<a href="/Gallery/DeleteImage/@item.GalleryId" class="btn btn-gradient-danger btn-sm" style="font-size: 12px"> <i class="fa fa-trash fa-sm me-1"></i>Delete</a>
									</td>
								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
</div>




