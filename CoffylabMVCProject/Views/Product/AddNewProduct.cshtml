@model CoffylabMVCProject.Entities.Product
@{
    ViewData["Title"] = "AddNewProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
	<div class="page-header">
		<h6 class="page-title">Add Product </h6>
	</div>
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form method="post" enctype="multipart/form-data">
						<label>Product Name</label>
						<br /><br />
						<input type="text" asp-for="ProductName" class="form-control" />
						<span asp-validation-for="ProductName" class="text-danger"></span>
						<br />
						<label>Product Description</label>
						<br /><br />
						<input type="text" asp-for="Description" class="form-control" />
						<span asp-validation-for="Description" class="text-danger"></span>
						<br />
						<label>Product Price</label>
						<br /><br />
						<input type="text" asp-for="ProductPrice" class="form-control" />
						<span asp-validation-for="ProductPrice" class="text-danger"></span>
						<br />
						<label>Product Image Url</label>
						<br /><br />
						<input type="file" asp-for="ImageFile" class="form-control" />
						<span asp-validation-for="ImageFile" class="text-danger"></span>
						<br />
						<label>Product Category</label>
						<br /><br />
						<select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
							<option value="0">Select Category</option>
						</select>
						<span asp-validation-for="CategoryId" class="text-danger"></span>
						<br />
					
						<button class="btn btn-gradient-info btn-sm" style="font-size: 12px">Save</button>

						
					</form>
				</div>
			</div>

		</div>
	</div>
</div>


@* 

 enctype="multipart/form-data" : Farklı formatta verileri içeren(file, video, resim vs) bir formu post edebilmek için bu ayarı yazmak gerekir.
 Dosya verisinin sunucuya gönderilmesini sağlar.
 <select>: HTML'de açılır liste(DropdownList) oluşturur.
asp-for: modeldeki bir property'e bağlamayı sağlayan bir tag helper'dır. name="ProductName" yapar 
form gönderildiğinde ASP.NET Core, Model Binding ile veriyi ProductName özelliğine bağlar.

*@

