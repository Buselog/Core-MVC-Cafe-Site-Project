@model List<CoffylabMVCProject.Entities.Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
	<div class="page-header">
		<h6 class="page-title"> Testimonial Table </h6>
		<a href="/Testimonial/AddNewTestimonial" class="btn btn-gradient-success btn-sm">
			<i class="fa fa-plus fa-sm me-1"></i> Add New Testimonial
		</a>
	</div>

	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">

					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Testimonial Id</th>
								<th>Title</th>
								<th>Description</th>
								<th>Rating</th>
								<th>Image</th>
								<th>Operations</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td><b>@item.TestimonialId</b></td>
									<td>@item.TestimonialTitle</td>
									<td>@item.Description.Substring(0,10)...</td>
									<td>

										@for (int i = 1; i <= 5; i++)
										{
											if (item.TestimonialRating >= i)
											{
												<i class="fa-solid fa-star" style="color: #E4D00A"></i>
											}
											else
											{
												<i class="fa-regular fa-star" style="color: #E4D00A"></i>
											}
										}

									</td>
									<td align="center">
										<img src="@item.TestimonialImageUrl" style="height:61px; width:69px" />
									</td>
									<td align="center">
										<a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-gradient-info btn-sm" style="font-size: 12px"><i class="fa fa-edit fa-sm me-1"></i>Update</a>


										&nbsp;
										<a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-gradient-danger btn-sm" style="font-size: 12px"> <i class="fa fa-trash fa-sm me-1"></i>Delete</a>
									</td>
								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>

		</div>
	</div>
</div>


