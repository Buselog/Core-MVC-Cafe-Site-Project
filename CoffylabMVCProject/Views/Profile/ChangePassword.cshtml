@model CoffylabMVCProject.Entities.Admin
@{
	ViewData["Title"] = "ChangePassword";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
	<div class="page-header">
		<h3 class="page-title">Password Change Page </h3>
	</div>
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<form method="post">
						<label>Current Password</label>
						<br /><br />
						<input type="password" asp-for="CurrentPassword" class="form-control" />
						<span asp-validation-for="CurrentPassword" class="text-danger"></span>
						<br />
						<label>New Password</label>
						<br /><br />
						<input type="password" asp-for="NewPassword" class="form-control" />
						<span asp-validation-for="NewPassword" class="text-danger"></span>
						<br />
						<label>Confirm Password</label>
						<br /><br />
						<input type="password" asp-for="ConfirmPassword" class="form-control" />
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						<p>
							@Html.ValidationSummary(excludePropertyErrors: true)
						</p>
						<br />
						<button class="btn btn-gradient-info btn-sm" style="font-size: 12px">Save Changes</button>

					</form>
				</div>
			</div>
		</div>
	</div>
</div>

