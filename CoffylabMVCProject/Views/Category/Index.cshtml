@model List<CoffylabMVCProject.Entities.Category>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">
	<div class="page-header">
		<h6 class="page-title"> Category Table </h6>
		<a href="/Category/AddNewCategory" class="btn btn-gradient-success btn-sm">
			<i class="fa fa-plus fa-sm me-1"></i>New Category
		</a>
	</div>

	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">

					<table class="table table-bordered table-hover">
						<thead>
							<tr>
								<th>Category Id</th>
								<th>Category Name</th>
								<th>Operations</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td><b>@item.CategoryId</b></td>
									<td>@item.CategoryName</td>
									<td align="center">
										<a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-gradient-info btn-sm" style="font-size: 12px"><i class="fa fa-edit fa-sm me-1"></i>Update</a>
										

										&nbsp;
										<a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-gradient-danger btn-sm" style="font-size: 12px"> <i class="fa fa-trash fa-sm me-1"></i>Delete</a>
									</td>
								</tr>
							}

						</tbody>
					</table>
				</div>
			</div>
			
		</div>
	</div>
</div>
